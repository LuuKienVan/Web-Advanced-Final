<div class="container d-flex justify-content-center">
    <div class="content p-5 m-3 bg-light border border-secondary rounded">
        <form id="form-transfer" method="post" enctype="multipart/form-data">
            <div class="form-group my-2">
                <label>Phone number:</label>
                <input type="text" class="form-control" id="phone_number" placeholder="" name="phone_number">
            </div>
            <div class="form-group my-2">
                <label>Money:</label>
                <input type="number" class="form-control" id="transfer_money" placeholder="" name="transfer_money">
            </div>
            <div class="form-group my-2">
                <label>Message:</label>
                <input type="text" class="form-control" id="message" placeholder="" name="message">
            </div>
            <div class="form-group my-2">
                <label>Transfer fee payer:</label>
                <select type="text" name="fee_payer" id="fee_payer">
                    <option value="Sender">Sender</option>
                    <option value="Receiver">Receiver</option>
                </select>
            </div>
            <button id="submit" class="btn btn-primary" type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

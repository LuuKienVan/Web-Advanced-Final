<div class="container d-flex justify-content-center">
    <div class="content p-5 m-3 bg-light border border-secondary rounded">
        <form id="form-phone-cards" method="post" enctype="multipart/form-data">
            <div class="form-group my-2">
                <label>Phone card:</label>
                <input type="text" class="form-control" id="phone_card" placeholder="" name="phone_card">
            </div>
            <div class="form-group my-2">
                <label>Money:</label>
                <input type="number" class="form-control" id="card_money" placeholder="" name="card_money">
            </div>
            <div class="form-group my-2">
                <label>Quantity:</label>
                <select type="text" name="quantity" id="quantity">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <button id="submit" class="btn btn-primary" type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
<div class="container wrap">
  <ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
      <a class="nav-link active" data-bs-toggle="tab" href="#deal">Giao dịch</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#user">Tài khoản</a>
    </li>
  </ul>

  <div class="tab-content container wrap">
    <div class="tab-pane active" id="deal">
      <table class="table table-hover table-bordered table-striped" style="width:100%">
        <thead>
          <tr>
            <th>Type</th>
            <th>Money</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for (let transaction of deals) { %>
            <tr>
              <td><%= transaction.type %></td>
              <td><%= transaction.money %></td>
              <td><%= transaction.date %></td>
              <td><%= transaction.status %></td>
              <td>
                <a class="btn btn-primary" href="#">View</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane" id="user">
